    <script>
        // Menú móvil
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');

        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            mobileMenuBtn.innerHTML = navLinks.classList.contains('active')
                ? '<i class="fas fa-times"></i>'
                : '<i class="fas fa-bars"></i>';
        });

        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });

        // Filtro de portafolio
        const filterButtons = document.querySelectorAll('.filter-btn');
        const portfolioItems = document.querySelectorAll('.portfolio-item');

        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');

                const filterValue = button.getAttribute('data-filter');

                portfolioItems.forEach(item => {
                    if (filterValue === 'all' || item.getAttribute('data-category') === filterValue) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });

        // Formulario a WhatsApp
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const business = document.getElementById('business').value;
            const service = document.getElementById('service').value;
            const message = document.getElementById('message').value;

            const businessTypes = {
                'restaurant': 'Restaurante / Cafetería',
                'cafe': 'Cafetería / Bar',
                'store': 'Tienda / Retail',
                'services': 'Servicios Profesionales',
                'other': 'Otro'
            };

            const serviceTypes = {
                'basico': 'Paquete Básico ($40 USD / 17,600 CUP)',
                'profesional': 'Paquete Profesional ($80 USD / 35,200 CUP)',
                'premium': 'Paquete Premium ($150 USD / 66,000 CUP)',
                'menu': 'Diseño de Menú ($30-60 USD)',
                'tarjetas': 'Tarjetas de Presentación ($20-40 USD)',
                'carteles': 'Carteles Publicitarios ($25-50 USD)',
                'personalizado': 'Presupuesto Personalizado'
            };

            const exchangeRate = 440;
            const servicePrices = {
                'basico': {usd: 40, cup: 40 * exchangeRate},
                'profesional': {usd: 80, cup: 80 * exchangeRate},
                'premium': {usd: 150, cup: 150 * exchangeRate}
            };

            const whatsappMessage = `*Nueva solicitud de diseño - Marca Clara*
            
*Información del cliente:*
• Nombre: ${name}
• Teléfono: ${phone}
• Tipo de negocio: ${businessTypes[business] || business}
• Servicio solicitado: ${serviceTypes[service] || service}

*Descripción del proyecto:*
${message}

${servicePrices[service] ? `*Precio estimado:* $${servicePrices[service].usd} USD ≈ ${servicePrices[service].cup.toLocaleString()} CUP` : '*Precio:* Por definir según requerimientos.'}

*Este mensaje fue enviado desde el formulario de contacto de la página web.*`;

            const encodedMessage = encodeURIComponent(whatsappMessage);
            window.open(`https://wa.me/5363792628?text=${encodedMessage}`, '_blank');

            alert(`¡Gracias ${name}! Serás redirigido a WhatsApp para continuar la conversación.`);
            this.reset();
        });

        // Efecto del header al hacer scroll
        window.addEventListener('scroll', () => {
            const header = document.getElementById('header');
            if (window.scrollY > 50) {
                header.style.boxShadow = '0 5px 20px rgba(27, 81, 125, 0.15)';
                header.style.padding = '0.8rem 0';
            } else {
                header.style.boxShadow = '0 2px 20px rgba(27, 81, 125, 0.1)';
                header.style.padding = '1rem 0';
            }
        });

        // Navegación suave
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                const targetId = this.getAttribute('href');
                if (!targetId || targetId === '#') return;
                e.preventDefault();

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Actualizar precios en CUP si quieres cambiar el tipo de cambio
        function updateExchangeRate(newRate) {
            const exchangeRate = newRate || 440;
            const usdPrices = {basico: 40, profesional: 80, premium: 150};

            document.querySelectorAll('.pricing-cup').forEach((element, index) => {
                const usdPrice = Object.values(usdPrices)[index];
                const cupPrice = usdPrice * exchangeRate;
                element.textContent = `≈ ${cupPrice.toLocaleString()} CUP`;
            });

            document.querySelector('.rate-highlight').textContent = `1 USD = ${exchangeRate} CUP`;

            const serviceOptions = document.querySelectorAll('#service option');
            serviceOptions.forEach(option => {
                if (option.value === 'basico') {
                    option.textContent = `Paquete Básico ($40 USD / ${(40*exchangeRate).toLocaleString()} CUP)`;
                } else if (option.value === 'profesional') {
                    option.textContent = `Paquete Profesional ($80 USD / ${(80*exchangeRate).toLocaleString()} CUP)`;
                } else if (option.value === 'premium') {
                    option.textContent = `Paquete Premium ($150 USD / ${(150*exchangeRate).toLocaleString()} CUP)`;
                }
            });
        }

        // Inicial
        updateExchangeRate(440);
    </script>
</body>
